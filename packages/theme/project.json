{
  "name": "@ifla/theme",
  "root": "packages/theme",
  "sourceRoot": "packages/theme/src",
  "projectType": "library",
  "tags": ["library", "theme"],
  "targets": {
    "build:tsc": {
      "executor": "@nx/js:tsc",
      "options": {
        "outputPath": "../../dist",
        "tsConfig": "packages/theme/tsconfig.build.json",
        "main": "packages/theme/src/index.ts"
      },
      "outputs": ["{workspaceRoot}/dist"],
      "cache": true,
      "inputs": [
        "production",
        "{projectRoot}/src/**/*",
        "{projectRoot}/tsconfig.build.json",
        "{projectRoot}/package.json"
      ]
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run @ifla/theme:build:tsc",
          "pnpm exec tsup"
        ],
        "cwd": "packages/theme",
        "parallel": false
      },
      "outputs": ["{projectRoot}/dist"],
      "cache": true,
      "inputs": [
        "production",
        "{projectRoot}/src/**/*",
        "{projectRoot}/tsup.config.ts",
        "{projectRoot}/tsconfig.build.json",
        "{projectRoot}/package.json"
      ],
      "dependsOn": ["build:tsc"]
    },
    "test": {
      "executor": "@nx/vite:test",
      "options": {
        "config": "{workspaceRoot}/vite.config.ts",
        "testPathPattern": ["packages/theme/src/tests", "packages/theme/src/components/**/__tests__"]
      },
      "outputs": ["{projectRoot}/coverage"],
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/src/**/*.{test,spec}.{js,ts,jsx,tsx}",
        "{projectRoot}/src/tests/**/*",
        "{workspaceRoot}/vite.config.ts",
        "{workspaceRoot}/vitest.config.*"
      ]
    },
    "test:unit": {
      "executor": "@nx/vite:test",
      "options": {
        "config": "{workspaceRoot}/vite.config.ts",
        "exclude": [
          "**/scripts/**",
          "**/deployment/**"
        ]
      },
      "outputs": ["{projectRoot}/coverage"],
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/src/**/*.{test,spec}.{js,ts,jsx,tsx}",
        "!{projectRoot}/src/tests/scripts/**/*",
        "!{projectRoot}/src/tests/deployment/**/*",
        "{workspaceRoot}/vite.config.ts",
        "{workspaceRoot}/vitest.config.*"
      ]
    },
    "test:integration": {
      "executor": "@nx/vite:test", 
      "options": {
        "config": "{workspaceRoot}/vite.config.ts",
        "include": [
          "**/scripts/**",
          "**/deployment/**"
        ]
      },
      "outputs": ["{projectRoot}/coverage"],
      "cache": true,
      "inputs": [
        "default",
        "{projectRoot}/src/tests/scripts/**/*",
        "{projectRoot}/src/tests/deployment/**/*",
        "{workspaceRoot}/vite.config.ts",
        "{workspaceRoot}/vitest.config.*"
      ]
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "packages/theme"
      },
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": [
        "default",
        "{projectRoot}/tsconfig.json",
        "{workspaceRoot}/tsconfig.json"
      ]
    }
  }
}
