{
  "name": "@ifla/admin",
  "version": "0.1.0",
  "description": "Authentication and API services for IFLA Standards platform",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev --port 3007",
    "start": "next start --port 3007",
    "test": "vitest run",
    "test:unit": "vitest run --exclude='**/*integration*'",
    "test:integration": "vitest run --include='**/*integration*' --exclude='**/server-dependent/**'",
    "test:server-dependent": "vitest run --config=vitest.config.server-dependent.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "next lint"
  }
}