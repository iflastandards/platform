{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "types": [
      "jest",
      "node",
      "vitest/globals"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@ifla/theme": [
        "../../packages/theme/src/index.ts"
      ],
      "@ifla/theme/*": [
        "../../packages/theme/src/*"
      ],
      "@ifla/theme/config": [
        "../../packages/theme/src/config/index.ts"
      ],
      "@ifla/theme/config/*": [
        "../../packages/theme/src/config/*"
      ]
    }
  },
  "include": [
    "**/*.js",
    "**/*.jsx",
    "**/*.ts",
    "**/*.tsx",
    "next-auth-types.d.ts",
    "next-env.d.ts",
    "../../dist/apps/admin/.next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/test/**/*",
    "dist/**/*",
    ".next/**/*",
    "../../dist/apps/admin/.next/**/*"
  ]
}
