{
  "mcpServers": {
    "Context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "puppeteer-real-browser": {
      "command": "npx",
      "args": [
        "puppeteer-real-browser-mcp-server@latest"
      ]
    },
    "nx-mcp": {
      "command": "npx",
      "args": [
        "nx-mcp@latest",
        "/path/to/your/workspace"
      ]
    },
    "perplexity-ask": {
      "command": "npx",
      "args": [
        "-y",
        "server-perplexity-ask"
      ],
      "env": {
        "PERPLEXITY_API_KEY": "your-api-key-here"
      }
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    }
  }
}