{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "roles": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "attributes": {
      "type": "object",
      "properties": {
        "rgs": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "sites": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "languages": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "github_username": {
          "type": "string"
        },
        "email": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  },
  "required": ["id", "roles"],
  "additionalProperties": true
}