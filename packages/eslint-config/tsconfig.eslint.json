{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.mjs",
    "**/*.cjs"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    ".docusaurus",
    "coverage",
    "tmp",
    "**/*.min.js",
    "**/*.d.ts"
  ]
}