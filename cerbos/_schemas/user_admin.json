{
  "$schema": "http://json-schema.org/draft-07/schema#",
  
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "attributes": {
      "type": "object",
      "properties": {
        "scope": {
          "type": "string",
          "enum": ["system", "rg", "site"]
        },
        "rg": {
          "type": "string"
        },
        "siteKey": {
          "type": "string"
        }
      },
      "required": ["scope"],
      "additionalProperties": true
    }
  },
  "required": ["id", "attributes"]
}