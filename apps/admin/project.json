{
  "name": "admin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/admin",
  "projectType": "application",
  "tags": [],
  "targets": {
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "apps/admin"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "apps/admin/src/**/*.{ts,tsx,js,jsx}",
          "apps/admin/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/admin"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/admin"
        },
        "production": {}
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": ["@ifla/theme"]
        }
      ]
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "admin:build",
        "dev": true,
        "port": 3007
      },
      "configurations": {
        "development": {
          "buildTarget": "admin:build:development",
          "dev": true,
          "port": 3007
        },
        "production": {
          "buildTarget": "admin:build:production",
          "dev": false,
          "port": 3007
        }
      }
    },
    "dev": {
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "admin:build:development",
        "dev": true,
        "port": 3007
      }
    },
    "start": {
      "executor": "@nx/next:server",
      "options": {
        "buildTarget": "admin:build:production",
        "dev": false,
        "port": 3007
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run",
        "cwd": "apps/admin"
      }
    },
    "test:unit": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run src/test/components/",
        "cwd": "apps/admin"
      }
    },
    "test:integration": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run src/test/integration/",
        "cwd": "apps/admin"
      }
    },
    "test:watch": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest",
        "cwd": "apps/admin"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --coverage",
        "cwd": "apps/admin"
      }
    },
    "e2e": {
      "executor": "nx:run-commands",
      "options": {
        "command": "playwright test --project=admin",
        "cwd": "."
      },
      "inputs": [
        "default",
        "{workspaceRoot}/e2e/admin/**/*.spec.ts",
        "{workspaceRoot}/e2e/admin/**/*.e2e.test.ts",
        "{workspaceRoot}/playwright.config.ts"
      ],
      "outputs": [
        "{workspaceRoot}/test-results",
        "{workspaceRoot}/playwright-report"
      ]
    }
  }
}
